<Window x:Class="VideoSorter.Views.RenamerPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoSorter.Views"
        mc:Ignorable="d"
        Title="RenamerPopup" Height="200" Width="600" Topmost="True" Background="#888" WindowStartupLocation="CenterOwner">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="109*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBox x:Name="tbxName" d:Text="IXL123221.828828" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="50 20" FontSize="20" />

    <StackPanel Grid.Row="1" x:Name="controlPanel1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" >
      <Button Margin="5" Content="_OK"      IsDefault="True"  Click="onSave" Width="60" Height="32"/>
      <Button Margin="5" Content="_Cancel"  IsCancel="True"   Click="onJump" Width="60" Height="32" />
    </StackPanel>

  </Grid>
</Window>