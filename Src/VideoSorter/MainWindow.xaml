<Window x:Class="VideoSorter.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:local="clr-namespace:VideoSorter"
        Title="Video Sorter" 
        Loaded="Window_Loaded"
        Left="0" Top="1600" Width="1900" Height="1060" Background="#333">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" x:Name="headerPanel1"  Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" Visibility="Collapsed"/> 
    <WrapPanel  Grid.Row="1" x:Name="wp1" Background="#8000" Margin="5" />
    <StackPanel Grid.Row="2" x:Name="controlPanel1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
      <Button Margin="5" Content="_Tgl Play"  IsDefault="True" Click="onTglPlay" />
      <Button Margin="5" Content="_Restart"   Click="onToStart" />
      <Button Margin="5" Content="_X"  IsCancel="True" Click="onClose" />
    </StackPanel>

  </Grid>
</Window>
